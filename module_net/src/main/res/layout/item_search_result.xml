<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/search_result_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large_size"
        android:textColor="@color/common_text_content_color"
        android:layout_marginStart="@dimen/base_margin_size"
        android:layout_marginTop="@dimen/margin_tiny_size"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/base_margin_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/search_result_pay"
        tools:text="听妈妈的话"/>
    <TextView
        android:id="@+id/search_result_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/margin_tiny_size"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/common_text_assist_gray"
        app:layout_constraintTop_toBottomOf="@+id/search_result_name"
        app:layout_constraintStart_toStartOf="@id/search_result_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="周杰伦"/>

    <TextView
        android:id="@+id/search_result_pay"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:text="付费"
        android:layout_marginTop="@dimen/margin_tiny_size"
        android:layout_marginEnd="@dimen/margin_small_size"
        android:background="@drawable/common_bg_blue_4t"
        android:textSize="@dimen/text_small_size"
        android:textColor="@color/common_base_theme_blue"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>


</android.support.constraint.ConstraintLayout>