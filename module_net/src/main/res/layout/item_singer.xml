<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_singer_rank"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textSize="@dimen/text_small_size"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_tiny_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1"
        tools:background="@drawable/bg_circle_blue"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_singer_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_tiny_size"
        app:layout_constraintStart_toEndOf="@+id/item_singer_rank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/icon_dog"/>

    <TextView
        android:id="@+id/item_singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large_size"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_singer_iv"
        android:layout_marginStart="@dimen/margin_tiny_size"
        android:layout_marginTop="@dimen/margin_small_size"
        tools:text="周杰伦"/>

    <TextView
        android:id="@+id/item_singer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/text_gray"
        app:layout_constraintStart_toStartOf="@+id/item_singer_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_small_size"
        tools:text="热度：3.3万，粉丝：5.1万"/>



</android.support.constraint.ConstraintLayout>