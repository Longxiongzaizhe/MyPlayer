<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_white">

    <LinearLayout
        android:id="@+id/sequent_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/base_margin_size"
            android:src="@drawable/icon_music_sequent"
            android:layout_marginLeft="@dimen/base_margin_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_large_size"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/base_margin_size"
            android:text="顺序播放"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_DDE0E6"/>

    <LinearLayout
        android:id="@+id/random_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/base_margin_size"
            android:src="@drawable/icon_music_random"
            android:layout_marginLeft="@dimen/base_margin_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_large_size"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/base_margin_size"
            android:text="随机播放"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_DDE0E6"/>

    <LinearLayout
        android:id="@+id/single_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/base_margin_size"
            android:src="@drawable/icon_music_single"
            android:layout_marginLeft="@dimen/base_margin_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_large_size"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/base_margin_size"
            android:text="单曲循环"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_DDE0E6"/>

    <LinearLayout
        android:id="@+id/circle_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/base_margin_size"
            android:src="@drawable/icon_music_circle"
            android:layout_marginLeft="@dimen/base_margin_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_large_size"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/base_margin_size"
            android:text="循环播放"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_DDE0E6"/>


</LinearLayout>