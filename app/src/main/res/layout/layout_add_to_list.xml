<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@color/common_background_color">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_plus_size"
        android:textColor="@color/common_text_content_color"
        android:padding="@dimen/padding_tiny_size"
        android:text="添加歌单"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/common_divider_line_color"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_add_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/common_divider_line_color"/>
    <TextView
        android:id="@+id/list_add_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/common_text_content_color"
        android:padding="@dimen/padding_tiny_size"
        android:textSize="@dimen/text_large_size"
        android:text="取消"
        android:gravity="center"/>


</LinearLayout>