<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:maxHeight="250dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/head_bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:alpha="0.7"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_nav_view"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_head_iv"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/icon_pig"
        android:layout_marginStart="@dimen/base_margin_size"
        android:layout_marginLeft="@dimen/base_margin_size"
        android:layout_marginBottom="@dimen/base_margin_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/head_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="Sunny"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_title_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/nav_head_iv"
        app:layout_constraintLeft_toRightOf="@+id/nav_head_iv"
        app:layout_constraintTop_toTopOf="@+id/nav_head_iv"
        />

</android.support.constraint.ConstraintLayout>